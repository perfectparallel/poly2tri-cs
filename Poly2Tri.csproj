  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageId>Poly2Tri.NetStandard2</PackageId>
    <PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
    <PackageProjectUrl>https://github.com/MaulingMonkey/poly2tri-cs</PackageProjectUrl>
    <Description />
    <Authors>Mason Green, Thomas Åhlén, Michael Rickert</Authors>
    <Company>Poly2Tri</Company>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Debug\**" />
    <Compile Remove="ExampleData\**" />
    <Compile Remove="SwfTest\**" />
    <EmbeddedResource Remove="Debug\**" />
    <EmbeddedResource Remove="ExampleData\**" />
    <EmbeddedResource Remove="SwfTest\**" />
    <None Remove="Debug\**" />
    <None Remove="ExampleData\**" />
    <None Remove="SwfTest\**" />
    <None Include="LICENSE.txt">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="Properties\AssemblyInfo.cs" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Properties\" />
  </ItemGroup>

</Project>
